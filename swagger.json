{
  "openapi": "3.0.1",
  "info": {
    "title": "Naija Recipes API",
    "description": "Naija Recipes API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/"
    }
  ],
  "tags": [
    {
      "name": "Naija Recipes",
      "description": "API for the best Nigerian recipes"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create user",
        "description": "Creates a new user in system",
        "requestBody": {
          "description": "User to be created",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          },
          "required": false
        },
        "responses": {
          "201": {
            "description": "Created new user",
            "content": {}
          },
          "400": {
            "description": "Validation error",
            "content": {}
          },
          "409": {
            "description": "Database conflict",
            "content": {}
          }
        }
      }
    },
    "/recipes": {
      "post": {
        "tags": [
          "Recipes"
        ],
        "summary": "Create new recipe",
        "description": "This endpoint will create a new recipe",
        "parameters": [
          {
            "name": "accesstoken",
            "in": "header",
            "schema": {}
          }
        ],
        "requestBody": {
          "description": "Recipe to be created",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Recipe"
              }
            }
          },
          "required": false
        },
        "responses": {
          "201": {
            "description": "Successfully created new recipe",
            "content": {}
          },
          "400": {
            "description": "Validation Error",
            "content": {}
          }
        }
      }
    },
    "/users/verify" : {
      "get" : {
        "description" : "Verify if the user is verified",
        "parameters" : [ {
          "name" : "token",
          "in" : "query",
          "schema" : {
            "type" : "string"
          },
          "example" : "eyJhbGciOiJIUzI1NiJ9.Mg.hbsvkNj_kZvQYNtZxa4r2GXoNRLq1q4xC9qSq48Dwhw"
        } ],
        "responses" : {
          "500" : {
            "description" : "Database connection error"
          },
          "400" : {
            "description" : "Verification token error",
            "content" : {
              "application/json; charset=utf-8" : {
                "schema" : {
                  "type" : "string"
                }
              }
            }
          },
          "200" : {
            "description" : "Account verification success"
          }
        }
      },
      "servers" : [ {
        "url" : "https://vale-ah-backend-staging.herokuapp.com"
      } ]
    }
  },
  "components": {
    "schemas": {
      "User": {
        "required": [
          "email",
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "password": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "Recipe": {
        "required": [
          "cookingTime",
          "ingredients",
          "preparationTime",
          "slug",
          "steps",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          },
          "ingredients": {
            "type": "array"
          },
          "steps": {
            "type": "array"
          },
          "cookingTime": {
            "type": "number"
          },
          "preparationTime": {
            "type": "number"
          }
        }
      }
    }
  }
}