{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "heroku-postbuild": "npm run initdb && npm run build",
    "build": "babel server -d dist --source-maps",
    "test": "npm run initdb && cross-env NODE_ENV=test nyc --reporter=text --reporter=html mocha --timeout=3000 --recursive --exit",
    "coverage": "nyc report --reporter=lcov --reporter=text-lcov | coveralls",
    "devstart": "npm run initdb && DEBUG=vale-ah* nodemon server/index.js --exec babel-node",
    "initdb": "babel-node server/utils/initdb.js"
  },
  "engines": {
    "node": "11.x"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "7.2.5",
    "bcrypt": "3.0.4",
    "body-parser": "1.18.3",
    "cors": "2.8.4",
    "cross-env": "5.2.0",
    "debug": "4.1.1",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "joi": "14.3.1",
    "cloudinary": "1.13.2",
    "connect-multiparty": "2.2.0",
    "multer": "1.4.1",
    "multer-storage-cloudinary": "2.2.1",
    "jsonwebtoken": "8.5.0",
    "morgan": "1.9.1",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "pg": "7.8.1",
    "pg-hstore": "2.3.2",
    "request": "2.87.0",
    "sequelize": "4.43.0",
    "sequelize-cli": "5.4.0",
    "slug": "1.0.0",
    "swagger-ui-express": "4.0.2",
    "underscore": "1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.4",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.3.4",
    "@babel/register": "7.0.0",
    "chai": "4.2.0",
    "chai-http": "4.2.1",
    "coveralls": "3.0.3",
    "eslint": "5.15.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "faker": "4.1.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "mocha": "6.0.2",
    "nodemon": "1.18.10",
    "nyc": "13.3.0",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ],
    "include": [
      "server/**/*.js"
    ],
    "exclude": [
      "node_modules/*"
    ]
  }
}
